# BlueHorseshoe Environment Configuration
# Copy this file to .env and update with your actual values

# ============================================================================
# MongoDB Configuration
# ============================================================================
MONGO_URI=mongodb://mongo:27017
MONGO_DB=bluehorseshoe

# ============================================================================
# File Paths
# ============================================================================
BASE_PATH=/workspaces/BlueHorseshoe/src/historical_data
LOGS_PATH=/workspaces/BlueHorseshoe/src/logs
GRAPHS_PATH=/workspaces/BlueHorseshoe/src/graphs
WEIGHTS_PATH=/workspaces/BlueHorseshoe/src/weights.json

# ============================================================================
# Market Data API (Alpha Vantage)
# ============================================================================
ALPHAVANTAGE_KEY=YOUR_ALPHAVANTAGE_API_KEY
ALPHAVANTAGE_CPS=2

# ============================================================================
# Email Notifications (SendGrid)
# ============================================================================
SMTP_SERVER=smtp.sendgrid.net
SMTP_PORT=2525
SMTP_USER=apikey
SMTP_PASSWORD=YOUR_SENDGRID_API_KEY
EMAIL_SENDER=sender@example.com
EMAIL_RECIPIENT=recipient@example.com

# ============================================================================
# Feature Flags
# ============================================================================
HOLIDAY_MODE=false